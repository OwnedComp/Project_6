{% extends 'base.html.twig' %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent ()}}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAFroHBrDo8zJfboSR3r5Z_YWnLv9HEaxw&libraries=geometry,visualization"></script>
{% endblock %}

{% block body %}
    <div id="index" class="">
        {{ include('carousel.html.twig') }}
        <div id='indexMap' class="container-fluid">
            <div id="birds"></div>
        </div>
    </div>
{% block javascripts %}
    {{ parent() }}
    <script>
        window.baseUrl = '{{ path('bird') }}';
    </script>
    {% if app.environment == 'dev' %}
        <script src="http://127.0.0.1:3000/static/searchBird.js"></script>
    {% else %}
        <script src="{{ asset('dist/searchBird.js') }}"></script>
    {% endif %}
{% endblock %}
{% endblock %}