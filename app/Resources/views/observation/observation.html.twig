{% extends 'base.html.twig' %}

{% block title %}
    Observations - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo="crossorigin="anonymous"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAFroHBrDo8zJfboSR3r5Z_YWnLv9HEaxw&libraries=geometry,visualization"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
{% endblock %}

{% block body %}
    <div id="row">
        <h2 class="formulaire-header">{% block formTitle %}Ajouter un oiseau{% endblock %}</h2>
        {{ form_start(form, {'attr': {'class': 'text-center formulaire-container'}}) }}
            <div id="add_bird" >
                {{ form_row(form.latitude) }}
                {{ form_row(form.longitude) }}
            </div>
            <div id="newBird" class="container">
                <h3 id="marker">Placez le marker a l'endroit exact de l'observation</h3>
                <div class="form-group">
                    <p>{{ form_label(form.nom, "Nom de l'èspèce",  {'label_attr': {'class': 'col-xs-12'}}) }}</p>
                    <p>{{ form_errors(form.nom) }}</p>
                    <p>{{ form_widget(form.nom, {'attr': {'class': 'btn btn-default col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8'}}) }}</p>
                </div>
                <div class="form-group">
                    {# Génération du label. #}
                    <p>{{ form_label(form.datevue, "Date de la vue",  {'label_attr': {'class': 'col-xs-12'}}) }}</p>
                    <p>{{ form_errors(form.datevue) }}</p>
                    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8 input-group date btn btn-default" id="datePicker">
                        {{ form_widget(form.datevue, {'attr': {'class': 'text-center form-control', 'name': 'date'}}) }}
                        <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                </div>
                <div></div>
                <p>{{ form_label(form.image,"Image facultative (.jpg ou .png)", {'attr': {'class': 'col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4'}}) }}</p>
                <p>{{ form_errors(form.image) }}</p>
                <p>{{ form_widget(form.image, {'attr': {'class': 'btn btn-default col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8'}}) }}</p>
                <div>
                    <input id="submitObs" class="btn btn-md col-xs-offset-4 col-xs-4 col-sm-offset-4 col-sm-14 col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4" type="submit"/>
                </div>
            </div>
        {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
    {% if app.environment == 'dev' %}
    <script src="http://127.0.0.1:3000/static/addBird.js">
    </script>
    {% else %}
    <script src="{{ asset('dist/addBird.js') }} ></script>
    {% endif %}

    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/datepicker.js') }}"></script>
{% endblock %}