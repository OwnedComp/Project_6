{% trans_default_domain 'FOSUserBundle' %}


<div class="fos_user_user_show">
    <div class="col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10 text-center">
        {% for success in app.session.flashbag.get('success') %}
            <div class="col-xs-12 text-center">
                <h4>{{ success }}</h4>
            </div>
        {% endfor %}
        <h1>Profil</h1>
        <div class="col-xs-12 col-md-8">
            <table class="table table-bordered table-condensed table-striped">
                <thead>
                    <tr>
                        <th class="text-center">{{ 'profile.show.username'|trans }}</th>
                        <th class="text-center">{{ 'profile.show.email'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row btn-group-vertical">
            <a class="btn btn-success" href={{ path("bird") }}>Retour Ã  l'accueil</a>
            <a class="btn btn-danger" href={{ path("fos_user_profile_edit") }}>Edition du profil</a>
            <a class="btn btn-info" href={{ path("fos_user_change_password") }}>Changement de mot de passe</a>
        </div>
    </div>
</div>
