{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="formulaire-triangle"></div>
<h2 class="formulaire-header">{% block formTitle %}Connexion{% endblock %}</h2>
<form class="text-center formulaire-container" action="{{ path("fos_user_security_check") }}" method="post">
{% if csrf_token %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
{% endif %}
    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input  class="text-center" placeholder="Nom d'utilisateur" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="text-center" type="password" placeholder="Mot de passe" id="password" name="_password" required="required" />
    </div>
    <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    <div><a href={{ path("fos_user_resetting_request") }}>J'ai oubli√© mon mot de passe</a></div>

    <a class="btn btn-info" href={{ path("fos_user_registration_register") }}>S'inscrire</a>
</form>
