{% trans_default_domain 'FOSUserBundle' %}

<div class="formulaire-triangle"></div>
<h2 class="formulaire-header">{% block formTitle %}Requête{% endblock %}</h2>
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request formulaire-container">
    <div class="form-group">
        <p><label for="username">{{ 'resetting.request.username'|trans }}</label></p>
        <p><input type="text" class="" id="username" name="username" placeholder="Nom d'utilisateur" required="required" /></p>
    </div>
    <div class="form-group">
        <input class="btn btn-default" type="submit" value="Mot de passe oublié" />
    </div>
</form>