{% trans_default_domain 'FOSUserBundle' %}


<div class="formulaire-triangle"></div>
<h2 class="formulaire-header">{% block formTitle %}Changement de mot de passe{% endblock %}</h2>

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password formulaire-container text-center' } }) }}
        <div class="form-group">
            <p>{{ form_label(form.current_password) }}</p>
            <p>{{ form_widget(form.current_password, {'attr': {'placeholder': 'Mot de passe actuel', 'class': 'text-center'}}) }}</p>
            <p>{{ form_errors(form.current_password) }}</p>
        </div>

        <div class="form-group">
            <p>{{ form_label(form.plainPassword.first) }}</p>
            <p>{{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Nouveau mot de passe', 'class': 'text-center'}}) }}</p>
            <p>{{ form_errors(form.plainPassword.first) }}</p>
        </div>

        <div class="form-group">
            <p>{{ form_label(form.plainPassword.second) }}</p>
            <p>{{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmation', 'class': 'text-center'}}) }}</p>
            <p>{{ form_errors(form.plainPassword.second) }}</p>
        </div>

    <div>
        <input class="btn btn-default" type="submit" value="Changer mon mot de passe" />
    </div>
{{ form_end(form) }}