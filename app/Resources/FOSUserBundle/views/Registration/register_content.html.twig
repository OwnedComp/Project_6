{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="text-center">


    {{ form_widget(form.username, {'attr':{'class': 'champs', 'placeholder': 'Entrez votre nom'}}) }}
    {{ form_errors(form.username) }}

    {{ form_widget(form.email, {'attr':{'class': 'champs', 'placeholder': 'Entrez votre e-mail'}}) }}
    {{ form_errors(form.email) }}

    {{ form_widget(form.plainPassword.first, {'attr':{'class': 'champs', 'placeholder': 'Mot de passe'}}) }}
    {{ form_errors(form.plainPassword.first) }}

    {{ form_widget(form.plainPassword.second, {'attr':{'class': 'champs', 'placeholder': 'Confirmation Mot de passe'}}) }}
    {{ form_errors(form.plainPassword.second) }}

</div>
    <div>
        <input id="submit_register" class="champs btn btn-default" type="submit" value= "Je m'inscris" />
    </div>
{{ form_end(form) }}
